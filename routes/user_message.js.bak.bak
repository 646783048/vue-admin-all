//引入express模块
const express=require('express');
//引入pool.js模块
const pool=require('../pool.js');
//创建路由器对象
const r=express.Router();
//1.留言板信息
//地址:127.0.0.1:8083/v1/usermessage
//请求方式:post
r.post('/message',(req,res,next)=>{
	//获得参数
	var obj=req.body
	console.log(obj)
		//将数据插入到数据库表中
	pool.query('insert into zp_usermessage set?',[obj],(err,result)=>{
		if(err){
			next(err);
			return;
		}
		console.log(result);
		//执行成功再响应
		res.send({code:200,msg:'员工添加成功'})
	})
});

//暴露路由器对象
module.exports=r;